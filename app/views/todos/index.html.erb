<main class="TodoPageMain">
            <h1 class="TodoPage-title">My Todo-list</h1>
            <%= form_with(url: "/todos" ,method: "post" ,class: "AddTodo") do%>
           <!-- <form class="AddTodo" action="/todos" method="POST" > -->
                <input class="AddTodo-text" type="text" placeholder="What's next?" name="todo_text">
                <input class="AddTodo-date" type="date" name="due_date">
                <input class="AddTodo-button" type="submit" value="Add"> 
            <% end %>
           <!-- </form> -->
            <%= render partial: "todo-section" , locals: {
                section_title: "Overdue",
                todos: @todos.overdue,
                show_due_date: true
                } %>
            <%= render partial: "todo-section" , locals: {
                section_title: "Due Today",
                todos: @todos.due_today,
                show_due_date: false
                } %>
            <%= render partial: "todo-section" , locals: {
                section_title: "Due Later",
                todos: @todos.due_later,
                show_due_date: true
                } %>
</main>